- @title = t('title.kontakt')
- @description = t('description.kontakt')
- @bodyclass = "kontakt"
- @kontakt = true
- @plainLayout = true
- @file = File.basename(__FILE__, ".haml")

%section.box
  %h1= t("kontakt.kontakt")
  %p 
    %p#phone
      = t("kontakt.telefon")
    
    %p#mail
      = t("kontakt.mail")
      
    %br 
    
    = t("kontakt.name")
    %br  
    = t("kontakt.strasse")
    %br
    = t("kontakt.stadt")
    
%section.box
  %h1= t("kontakt.wo_header")
  %p= t("kontakt.wo_1")
  %p= t("kontakt.wo_2")
  
%section.box.last

  %h1= t("kontakt.anfrage")
  %form#contact{:action => 'javascript:;'}

    %label{:for => "name"}= t("form.name")
    %input{:type => "text", :name => "name", :id => "_name"}
  
    %label{:for => "mail"}= t("form.mail")
    %input{:type => "text", :name => "mail", :id => "_mail"}
  
    %label{:for => "anfrage"}= t("form.anfrage")
    %textarea{:type => "text", :name => "anfrage", :id => "_anfrage",  :rows => "10"}

    %br
  
    %button{:type => 'submit'}= t("form.abschicken")
    
    %p#note